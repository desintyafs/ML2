<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/grey"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="top|center"
            android:text="Simulation"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="14dp"
            tools:ignore="MissingConstraints" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btnCheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/battery_power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="mAh Baterai"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apakah Memiliki Bluetoot (0 : Tidak , 1 : Ya)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/clock_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kecepatan Jam"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/dual_sim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apakah Memiliki Dual Sim (0 : Tidak, 1 : Ya)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/fc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mega piksel Kamera Depan"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/four_g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apakah Memiliki 4G (0 : Tidak, 1 : Ya)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/int_memory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Memory Internal"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/m_dep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ketebalan Telepon Selular"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/mobile_wt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Berat Telepon Selular"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/n_cores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mega Piksel Kamera Utama"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/pc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tingkat Insulin dalam darah"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/px_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tinggi Resolusi"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/px_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lebar Resolusi"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/ram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="RAM"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/sc_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tinggi Layar Telepon Selular"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/sc_w"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lebar Layar Telepon Selular"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/talk_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Waktu Pengisian Daya Baterai"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/three_g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apakah Memiliki 3G (0 : Tidak, 1 : Ya)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/touch_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apakah Memiliki Layar Sentuh (0 : Tidak, 1 : Ya)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apakah Memiliki Wifi (0 : Tidak, 1: Ya)"
                android:inputType="numberDecimal" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predict"
        android:backgroundTint="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/mainScrollView"
        app:layout_constraintBottom_toTopOf="@id/txtResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="406dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCheck"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>